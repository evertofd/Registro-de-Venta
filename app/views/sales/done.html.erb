<table>
  <thead>
    <th>N de registro</th>
    <th>Detalle</th>
    <th>Valor</th>
    <th>Descuento</th>
    <th>IVA</th>
    <th>Total</th>
  </thead>

  <tbody>
    <% @sales. each do |s| %>
    <tr>
      <td> <%= s.cod %> </td>
      <td> <%= s.detail %> </td>
      <td> <%= s.value %> </td>
      <td> <%= s.discount %> </td>
      <td>
        <%=
        if s.tax == 1
        "0%"
        else
        "19%"
        end
        %></td>
        <td> <%= s.total %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

